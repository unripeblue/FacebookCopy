<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/myMessage"
        android:gravity="right|center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/message_time_radius_box"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="-15dp"
            android:text="오후 1:19"/>

        <TextView
            android:id="@+id/myMessageTxt"
            android:textColor="#000000"
            android:background="@drawable/my_message_content_radius_box"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="ㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋ"/>


    </LinearLayout>


    <LinearLayout
        android:padding="5dp"
        android:id="@+id/opponentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher_round"/>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아빠"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/opponentMessageTxt"
                    android:textColor="#000000"
                    android:background="@drawable/opponent_message_content_radius_box"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="ㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋ"/>

                <TextView
                    android:background="@drawable/message_time_radius_box"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-15dp"
                    android:text="오후 1:19"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>